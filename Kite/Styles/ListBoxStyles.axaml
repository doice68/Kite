<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

	<Style Selector="Button.ListItem">
		<Setter
			Property="Cursor"
			Value="Hand"/>
		<Setter
			Property="RenderTransform">
			<TranslateTransform X="0"/>
		</Setter>
		<Setter
			Property="BorderThickness"
			Value="2"/>
		<Setter
			Property="Background"
			Value="#FF2E3238"/>
	</Style>
	<Style Selector="Button.ListItem:selected">
		<Setter
			Property="Background"
			Value="#FF2E3238"/>
	</Style>
	<Style Selector="Button.ListItem:pointerover">
		<Setter
			Property="Background"
			Value="#394661"/>
		<Setter
			Property="BorderThickness"
			Value="2"/>
		<Setter
			Property="BorderBrush"
			Value="{StaticResource SemiBlue4}"/>
	</Style>
	<Style Selector="Button.ListItem Label">
		<Setter
			Property="Transitions">
			<Transitions>
				<TransformOperationsTransition
					Duration="0:0:0.1"
					Easing="CircularEaseOut"
					Property="RenderTransform"/>
			</Transitions>
		</Setter>
	</Style>
	<Style Selector="Button.ListItem:pointerover Label">
		<Setter
			Property="RenderTransform"
			Value="translateX(15px)"/>
	</Style>
</Styles>
